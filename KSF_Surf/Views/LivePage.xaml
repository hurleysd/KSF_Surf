<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Forms9Patch="clr-namespace:Forms9Patch;assembly=Forms9Patch"
             mc:Ignorable="d"
             x:Class="KSF_Surf.Views.LivePage"
             Title="Live"
             x:Name="LiveTab"
             Style="{DynamicResource ContentPageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Refresh"
                     IconImageSource="refresh_icon.png"
                     Clicked="Refresh_Pressed">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="TwitchPurpleColor">#6441a5</Color>
            <Style x:Key = "Right2ColStyle" TargetType="Label">
                <Setter Property="FontSize">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:Double" Android="19" iOS="20" />
                    </Setter.Value>
                </Setter>
                <Setter Property="TextColor" Value="{DynamicResource HeaderTextColor}"/>
                <Setter Property="LineBreakMode" Value="NoWrap"/>
            </Style>
            <Style x:Key = "Right3ColStyle" TargetType="Label">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="TextColor" Value="{DynamicResource GrayTextColor}"/>
                <Setter Property="LineBreakMode" Value="NoWrap"/>
            </Style>
            <Style x:Key = "MapSeparatorStyle" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="{DynamicResource ViewBackgroundColor}"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <AbsoluteLayout>
        <ScrollView x:Name="LiveScrollView"
                    Orientation="Vertical"
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    IsVisible="False">
            <StackLayout Orientation="Vertical"
                         Padding="0"
                         Spacing="0">

                <StackLayout x:Name="LiveServersStack"
                             Orientation="Vertical"
                             Padding="10,15,10,15">

                    <!-- Servers -->
                    <Label Text="KSFClan Servers"
                           x:Name="LiveServersLabel"
                           Style="{DynamicResource HeaderLabel}"
                           HorizontalOptions="StartAndExpand"
                           Margin="10,0,0,0"/>

                    <Label x:Name ="TopGameLabel"
                           Text="CS:S"
                           Style="{DynamicResource HeaderLabel}"
                           Margin="10,0,0,0"/>

                    <Grid x:Name="CSSGrid"
                          Style="{StaticResource ColumnGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout x:Name="CSSServerStack" 
                                        Orientation="Vertical"
                                        Grid.Column="0">
                            <StackLayout.Spacing>
                                <OnPlatform x:TypeArguments="x:Double" Android="23.5" iOS="22" />
                            </StackLayout.Spacing>
                        </StackLayout>

                        <StackLayout x:Name="CSSMapsStack" 
                                        Orientation="Vertical" 
                                        Spacing="3"
                                        Grid.Column="1"/>
                    </Grid>

                    <BoxView x:Name="CSSServerSeperator"
                             Style="{DynamicResource MiniSeparatorStyle}"/>

                    <Grid x:Name="CSS100TGrid"
                          Style="{StaticResource ColumnGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout x:Name="CSS100TServerStack" 
                                        Orientation="Vertical" 
                                        Grid.Column="0">
                            <StackLayout.Spacing>
                                <OnPlatform x:TypeArguments="x:Double" Android="23.5" iOS="22" />
                            </StackLayout.Spacing>
                        </StackLayout>

                        <StackLayout x:Name="CSS100TMapsStack" 
                                        Orientation="Vertical"
                                        Spacing="3"
                                        Grid.Column="1"/>

                    </Grid>

                    <BoxView x:Name="GameServerSeperator"
                             Style="{DynamicResource MiniSeparatorStyle}"/>

                    <Label x:Name="BottomGameLabel"
                           Text="CS:GO"
                           Style="{DynamicResource HeaderLabel}"
                           Margin="10,10,0,0"/>

                    <Grid x:Name="CSGOGrid"
                            Style="{StaticResource ColumnGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout x:Name="CSGOServerStack" 
                                        Orientation="Vertical"
                                        Grid.Column="0">
                            <StackLayout.Spacing>
                                <OnPlatform x:TypeArguments="x:Double" Android="23.5" iOS="22" />
                            </StackLayout.Spacing>
                        </StackLayout>

                        <StackLayout x:Name="CSGOMapsStack" 
                                        Orientation="Vertical"
                                        Spacing="3"
                                        Grid.Column="1"/>
                    </Grid>

                </StackLayout>

                <BoxView Style="{StaticResource Separator2Style}"
                         Margin="10,0,10,0"/>

                <!-- Twitch Streams -->
                <Label Text="Surfer Streams"
                       Style="{DynamicResource HeaderLabel}"
                       Margin="20,15,10,10"/>

                <Frame Style="{DynamicResource SelectableFrameStyle}"
                       Margin="0,0,0,15">
                    <CollectionView x:Name ="StreamsCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="Stream_SelectionChanged"      
                                    BackgroundColor="{DynamicResource ViewBackgroundColor}"
                                    HeightRequest="133"
                                    HorizontalOptions="Fill"
                                    HorizontalScrollBarVisibility="Never">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,10,12,10"
                                      RowSpacing="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="128"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="72"/>
                                        <RowDefinition Height="26"/>
                                        <RowDefinition Height="15"/>
                                    </Grid.RowDefinitions>

                                    <Frame CornerRadius="6"
                                           BorderColor="{StaticResource TwitchPurpleColor}"
                                           HasShadow="False"
                                           Grid.Row="0"
                                           IsClippedToBounds="True"
                                           Padding="0">
                                        <Image Source="{Binding thumbnail_url}"/>
                                    </Frame>

                                    <Forms9Patch:Label Text="{Binding user_name}"
                                                       LineBreakMode="NoWrap"
                                                       VerticalOptions="Center"
                                                       TextColor="{DynamicResource HeaderTextColor}"
                                                       FontSize="17"
                                                       Lines="1"
                                                       AutoFit="Width"
                                                       MinFontSize="14"
                                                       Grid.Row="1"/>

                                    <Label Text="{Binding title}"
                                           LineBreakMode="NoWrap"
                                           FontSize="10"
                                           TextColor="{StaticResource TwitchPurpleColor}"
                                           VerticalOptions="Center"
                                           Grid.Row="2"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <Label Text="No streams online :("
                                   TextColor="{DynamicResource GrayTextColor}"
                                   FontSize="20"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Frame>
            </StackLayout>
        </ScrollView>
        <ActivityIndicator x:Name="LoadingAnimation"
                           AbsoluteLayout.LayoutFlags="PositionProportional"
                           AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                           Style="{DynamicResource LoadingStyle}"/>
    </AbsoluteLayout>
</ContentPage>